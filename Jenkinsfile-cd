pipeline {
    agent any
    stages {
        stage('Publish over ssh plugin in pipeline') {
                steps{
                        sshPublisher(
                            publishers: [
                                sshPublisherDesc(
                                    configName: 3.91.55.38, 
                                    transfers: [
                                        sshTransfer(
                                            cleanRemote: false, 
                                            excludes: '', 
                                            execCommand: 'cd microservice-app-example/ ; sudo git pull'
                                        )
                                    ]
                                )
                            ]
                        )
                    }
                }
            }
        } 

