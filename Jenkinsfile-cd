pipeline {
    agent any
    stages {
        stage('Publish over ssh plugin in pipeline') {
                steps{
                        sshPublisher(
                            publishers: [
                                sshPublisherDesc(
                                    configName: "Frontend", 
                                    transfers: [
                                        sshTransfer( 
                                            execCommand: 'cd microservice-app-example/ ; sudo git pull'
                                        )
                                    ]
                                )
                            ]
                        )
                    }
                }
            }
        } 

